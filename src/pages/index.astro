---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { services } from "../data/services";
import ServiceCard from "../components/ServiceCard.astro";
import { Shield, Clock, Award, CheckCircle2 } from "@lucide/astro";

export const prerender = true;
---

<Base title="Ecoquimia - Control de Plagas y Fumigacion en Santo Domingo" description="Servicios profesionales de fumigacion y control de plagas en Republica Dominicana.">
  <Header slot="header" />

  <!-- HERO -->
  <section class="relative min-h-[70vh] md:min-h-[85vh] flex items-end overflow-hidden bg-[url('/banner-principal.jpg')] bg-cover bg-center bg-no-repeat">
    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/50 to-black/30"></div>

    <div class="container-max relative z-10 pt-32 md:pt-40 pb-20 md:pb-28 text-white">
      <h1 class="text-3xl md:text-5xl font-extrabold max-w-2xl leading-tight">
        Control profesional de plagas en Santo Domingo
      </h1>

      <p class="mt-4 max-w-xl text-base md:text-lg text-white/90">
        Soluciones efectivas, seguras y certificadas para hogares y negocios en toda la Republica Dominicana.
      </p>
    </div>

    <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 bottom-0 h-28 bg-gradient-to-b from-transparent to-white"></div>
  </section>

  <!-- SECCION DE CONFIANZA -->
  <section class="container-max py-10 -mt-10 relative z-20">
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      <div class="surface rounded-app p-4 flex items-center gap-3 transition hover:shadow-md">
        <div class="rounded-full bg-emerald-100 p-2 shrink-0">
          <Shield class="w-5 h-5 text-emerald-600" />
        </div>
        <div>
          <p class="font-semibold text-zinc-900">Productos certificados</p>
          <p class="text-sm text-zinc-600">EPA y salud publica</p>
        </div>
      </div>

      <div class="surface rounded-app p-4 flex items-center gap-3 transition hover:shadow-md">
        <div class="rounded-full bg-blue-100 p-2 shrink-0">
          <Clock class="w-5 h-5 text-blue-600" />
        </div>
        <div>
          <p class="font-semibold text-zinc-900">Respuesta rapida</p>
          <p class="text-sm text-zinc-600">En menos de 24 horas</p>
        </div>
      </div>

      <div class="surface rounded-app p-4 flex items-center gap-3 transition hover:shadow-md">
        <div class="rounded-full bg-amber-100 p-2 shrink-0">
          <Award class="w-5 h-5 text-amber-600" />
        </div>
        <div>
          <p class="font-semibold text-zinc-900">+10 a√±os de experiencia</p>
          <p class="text-sm text-zinc-600">Personal capacitado</p>
        </div>
      </div>

      <div class="surface rounded-app p-4 flex items-center gap-3 transition hover:shadow-md">
        <div class="rounded-full bg-purple-100 p-2 shrink-0">
          <CheckCircle2 class="w-5 h-5 text-purple-600" />
        </div>
        <div>
          <p class="font-semibold text-zinc-900">Garantia por escrito</p>
          <p class="text-sm text-zinc-600">En todos los servicios</p>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICIOS -->
  <section class="container-max py-16" aria-labelledby="srv-title">
    <div class="text-center">
      <h2 id="srv-title" class="text-2xl md:text-3xl font-bold text-zinc-900">Nuestros servicios</h2>
      <div class="mx-auto mt-3 h-1.5 w-20 rounded-full bg-brand"></div>
      <p class="mt-3 text-zinc-600">Planes residenciales y comerciales con certificacion.</p>
    </div>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {services.map((s) => <ServiceCard service={s} />)}
    </div>

    <!-- CTA despues de servicios -->
    <div class="mt-10 text-center">
      <a href="/cotizacion" class="btn btn-primary">Cotizar ahora</a>
    </div>
  </section>

  <!-- APRENDE DE LAS PLAGAS -->
  <section class="container-max pb-16">
    <div class="rounded-3xl border border-black/5 bg-gradient-to-br from-emerald-50 to-white p-6 md:p-8">
      <h3 class="text-xl md:text-2xl font-semibold text-zinc-900">Aprende de las plagas</h3>
      <p class="mt-2 text-zinc-700">Consejos practicos y guias rapidas para tu hogar o negocio.</p>
      <div class="mt-4 flex flex-wrap gap-3">
        <a href="/aprende-de-las-plagas" class="btn btn-primary" data-astro-prefetch>Guias y consejos</a>
        <a href="/contact" class="btn btn-outline" data-astro-prefetch>Contacto</a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Base>
