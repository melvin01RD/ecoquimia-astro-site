---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { services } from "../data/services";
import ServiceCard from "../components/ServiceCard.astro";
---

<Base title="Ecoquimia | Control de Plagas" description="Servicios profesionales de fumigación y control de plagas en RD" noContainer>
  <!-- Header va en el slot header -->
  <Fragment slot="header"><Header /></Fragment>

  <!-- HERO (con imagen de /public/brief/hero.png) -->
  <section class="relative overflow-hidden pt-24 md:pt-28">
    <!-- Imagen de fondo -->
    <img
      src="/brief/hero.png"
      alt="Ecoquimia Hero"
      class="pointer-events-none absolute inset-0 -z-10 h-full w-full object-cover"
    />
    <!-- Overlay suave -->
    <div class="absolute inset-0 -z-10 bg-black/40"></div>

    <div class="container-max py-20 md:py-28">
      <span class="inline-flex items-center rounded-full border border-white/15 px-3 py-1 text-xs text-white/80">
        Control Integral de Plagas
      </span>
      <h1 class="mt-4 text-4xl md:text-6xl font-extrabold leading-tight">
        Fumigación profesional <span class="text-brand">a otro nivel</span>
      </h1>
      <p class="mt-4 text-white/80 max-w-2xl">
        Protegemos hogares y negocios contra cucarachas, roedores, termitas y más.
      </p>
      <div class="mt-6 flex gap-3">
        <a href="/cotiza" class="btn btn-primary">Solicitar cotización</a>
        <a href="/services" class="btn btn-outline">Ver servicios</a>
      </div>
    </div>

    <!-- Glow decorativo inferior -->
    <div class="absolute inset-x-0 bottom-0 -z-10 h-64 bg-[radial-gradient(60%_60%_at_50%_0%,rgba(29,122,83,.35),rgba(0,0,0,0))]"></div>
  </section>

  <!-- LISTA DE SERVICIOS -->
  <main class="container-max py-16">
    <div class="text-center">
      <h2 class="text-2xl md:text-3xl font-bold">Nuestros servicios</h2>
      <div class="mx-auto mt-3 h-1.5 w-20 rounded-full bg-brand"></div>
      <p class="text-white/70 mt-3">Planes residenciales y comerciales con certificación.</p>
    </div>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {services.map((s) => <ServiceCard service={s} />)}
    </div>
  </main>

  <!-- SECCIÓN DE PLAGAS (la imagen plagas.png como bloque/sección) -->
  <section class="py-10 container-max px-6">
    <h2 class="text-2xl font-bold mb-4">Expertos en plagas</h2>
    <img src="/brief/plagas.png" alt="Plagas tratadas" class="w-full rounded-lg shadow" />
  </section>

  <!-- Footer va en el slot footer SIEMPRE al final -->
  <Fragment slot="footer"><Footer /></Fragment>
</Base>
