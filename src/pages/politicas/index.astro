---
import Base from "../../layouts/Base.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---
<Base title="Políticas — Ecoquimia" description="Términos, privacidad y cookies.">
  <Header slot="header" />

  <section class="container-max py-16">
    <div class="rounded-3xl border border-white/10 bg-zinc-900/60 p-8 text-white">
      <h1 class="text-3xl font-semibold">Políticas</h1>
      <p class="mt-3 text-white/80">
        Aquí encontrarás nuestra Política de Privacidad, Términos de Servicio y uso de Cookies.
        El documento oficial estará disponible pronto.
      </p>
      <div class="mt-6">
        <a href="/" class="btn btn-outline">Volver al inicio</a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Base>
