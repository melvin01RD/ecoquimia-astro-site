---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<Base title="Página no encontrada — Ecoquimia" description="La ruta solicitada no existe.">
  <Header slot="header" />
  <section class="container-max py-20 text-center">
    <h1 class="text-5xl font-bold tracking-tight">404</h1>
    <p class="mt-3 text-zinc-600">Ups, esta página no existe o fue movida.</p>
    <div class="mt-6 flex items-center justify-center gap-3">
      <a href="/" class="btn btn-primary" data-astro-prefetch="hover">Volver al inicio</a>
      <a href="/services" class="btn btn-outline" data-astro-prefetch>Ver servicios</a>
    </div>
  </section>
  <Footer slot="footer" />
</Base>
