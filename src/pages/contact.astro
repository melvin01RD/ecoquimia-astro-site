---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const WHATSAPP_PHONE = "18096172105"; // Cambia a tu número
---
<Base title="Contacto | Ecoquimia" description="Escríbenos para tu cotización">
  <Fragment slot="header"><Header /></Fragment>
  <section class="grid gap-10 md:grid-cols-2">
    <div class="card p-6 text-zinc-900">
      <h2 class="text-xl font-bold">WhatsApp inmediato</h2>
      <p class="text-sm text-zinc-600 mt-1">Completa y abriremos WhatsApp con tu mensaje listo.</p>
      <form id="whats" class="mt-4 grid gap-3">
        <input required name="nombre" placeholder="Tu nombre" class="rounded-xl border p-3">
        <input required name="telefono" placeholder="Tu teléfono" class="rounded-xl border p-3">
        <input required name="servicio" placeholder="Servicio (ej. desratización)" class="rounded-xl border p-3">
        <textarea name="detalle" placeholder="Detalles" class="rounded-xl border p-3 min-h-[120px]"></textarea>
        <button class="btn btn-primary" type="submit">Enviar por WhatsApp</button>


    