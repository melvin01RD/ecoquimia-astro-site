---
// props opcionales
const { title = "Ecoquimia", description = "" } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <slot name="header" />
    <main><slot /></main>
    <slot name="footer" />
  </body>
</html>
