---
import "../styles/global.css";
const { title = "Ecoquimia", description = "Control Integral de Plagas", noContainer = false } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-gradient-to-b from-zinc-900 to-zinc-950 text-zinc-100" style="font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, 'Noto Sans', 'Helvetica Neue', Arial">
    <slot name="header" />
    {noContainer ? <slot /> : <main class="container-max py-10"><slot /></main>}
    <slot name="footer" />
  </body>
</html>
