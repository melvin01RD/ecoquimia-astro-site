---
const links = [
  { href: "/", label: "Inicio" },
  { href: "/services", label: "Servicios" },
  { href: "/contact", label: "Contacto" },
];
const { pathname } = Astro.url;
---
<header class="sticky top-0 z-50 backdrop-blur bg-zinc-900/70 border-b border-white/10">
  <div class="container-max flex items-center justify-between h-16">
    <!-- logo como arriba -->
    <nav class="flex items-center gap-6">
      {links.map((l) => (
        <a
          href={l.href}
          class={`text-sm transition ${
            pathname === l.href ? "text-white font-semibold" : "text-white/70 hover:text-white/90"
          }`}
        >
          {l.label}
        </a>
      ))}
      <a
        href="https://wa.me/18090000000?text=Hola%20quiero%20una%20cotizaci%C3%B3n"
        target="_blank" rel="noopener noreferrer"
        class="btn btn-primary text-sm"
        aria-label="Escribir por WhatsApp"
      >WhatsApp</a>
    </nav>
  </div>
</header>
