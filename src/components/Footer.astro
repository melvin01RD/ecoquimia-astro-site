        <!-- <img src="/logo/ecoquimia-logo.png" alt="Ecoquimia" class="h-8 w-auto" /> -->
        <span>Ecoquimia</span>
      </a>
      <p class="mt-3 text-base tracking-wide text-white/85">
        Control integral de plagas para hogares y empresas. Santo Domingo, RD.
      </p>
    </div>

    <!-- Contacto -->
    <div class="text-center sm:text-left">
      <h4 class="font-semibold mb-3">Contacto</h4>
      <address class="not-italic">
        <ul class="space-y-2 text-base tracking-wide">
          <li>
            üìû          
            <a
              href={`tel:+${config.contact.phone}`}
              class="text-white/80 hover:text-white underline-offset-4 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 rounded"
            >
              {config.contact.phoneDisplay}
            </a>
          </li>
          <li>
            ‚úâÔ∏è
            <a
              href={`mailto:${config.contact.to}`}
              class="text-white/80 hover:text-white underline-offset-4 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 rounded"
            >
              {config.contact.to}
            </a>
          </li>
          <li>üìç {config.contact.address}</li>
        </ul>
      </address>
    </div>

    <!-- Enlaces -->
    <nav aria-label="Enlaces del sitio" class="text-center sm:text-left">
      <h4 class="font-semibold mb-3">Enlaces</h4>
      <ul class="space-y-2 text-base tracking-wide">
        <li><a href="/"                   class="text-white/80 hover:text-white underline-offset-4 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 rounded">Inicio</a></li>
        <li><a href="/nosotros"           class="text-white/80 hover:text-white underline-offset-4 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 rounded">Nosotros</a></li>
  <li><a href="/servicios"           class="text-white/80 hover:text-white underline-offset-4 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 rounded">Servicios</a></li>
        <li><a href="/cotizacion"         class="text-white/80 hover:text-white underline-offset-4 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 rounded">Cotizaci√≥n</a></li>
        <li><a href="/aprende-de-las-plagas" class="text-white/80 hover:text-white underline-offset-4 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 rounded">Aprende de las plagas</a></li>
        <li><a href="/contact"            class="text-white/80 hover:text-white underline-offset-4 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 rounded">Contacto</a></li>
        <li><a href="/politicas"          class="text-white/80 hover:text-white underline-offset-4 hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 rounded">Pol√≠ticas</a></li>
      </ul>
    </nav>
  </div>

  <!-- Legal -->
  <div class="border-t border-white/10 relative z-10">
    <div class="container-max py-6 text-center text-sm text-white/70">
      ¬© <span id="js-current-year">2026</span> Ecoquimia. Todos los derechos reservados.
    </div>
  </div>

  <script>
    (() => {
      const el = document.getElementById('js-current-year');
      if (el) el.textContent = String(new Date().getFullYear());
    })();
  </script>
</footer>